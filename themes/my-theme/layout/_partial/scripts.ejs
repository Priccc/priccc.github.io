<% if (config.gitalkConfig){ %>
<script>
  var gitalk = new Gitalk({
    clientID: '<%= config.gitalkConfig.clientID  %>',
    clientSecret: '<%= config.gitalkConfig.clientSecret  %>',
    repo: '<%= config.gitalkConfig.repo  %>',
    owner: '<%= config.gitalkConfig.owner  %>',
    admin: ['<%= config.gitalkConfig.admin  %>'],
    id: '<%= config.gitalkConfig.id  %>',
    distractionFreeMode: <%= config.gitalkConfig.distractionFreeMode  %>
  });
    
  gitalk.render('gitalk-container')
</script>
<% } %>

